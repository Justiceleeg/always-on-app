# Database
DATABASE_URL=postgresql+asyncpg://frontier:frontier_dev@localhost:5432/frontier_audio

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# OpenAI API Key (for Whisper transcription and embeddings)
OPENAI_API_KEY=sk-your-openai-api-key

# AWS Configuration (for S3 consent audio storage - used in Slice 4+)
AWS_S3_BUCKET=your-bucket-name
